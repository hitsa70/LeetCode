
//7. Reverse Integer
// Runtime: 1 ms, faster than 100.00% of Java online submissions for Reverse Integer.
// Memory Usage: 36 MB, less than 99.43% of Java online submissions for Reverse Integer.


class Solution {
    public int reverse(int x) {
        
       
        
        long ret=0;
        
        while(x!=0)
        {  
            ret*=10;
         
            if( ret>Integer.MAX_VALUE || ret < Integer.MIN_VALUE)
            return 0;
            
            
            ret+=x%10;
            x/=10;            
             
        }
        
        
        
        return (int)ret;
    }
}
